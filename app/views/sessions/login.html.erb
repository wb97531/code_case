<h2>Login</h2>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <%= submit_tag 'Login' %>
<% end %>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= link_to 'Back', root_path, :class => "btn btn-primary" %>
  </div>
</div>
