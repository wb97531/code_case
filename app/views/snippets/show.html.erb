<div class="page-header">
  <%= link_to snippets_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_snippet_path(@snippet), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Code Snippet</h1>
</div>

<dl class="dl-horizontal snippet-text">
  <dt>Project:</dt>
  <dd><%= @project.project_name %></dd>

  <dt>Objective:</dt>
  <dd><%= @snippet.objective %></dd>

  <dt>Github file link:</dt>
  <dd><a href = <%= @snippet.github_file_link %>><%= @snippet.github_file_link %></a></dd>

  <div class = 'snippet-pic'>
    <script src = <%= @snippet.image_name %>></script>
  </div>
  <a id = 'seeCodeButton' class = 'btn btn-primary' href = 'javascript:location.reload(true)'>See the code</a>
</dl>

