<%= form_for(@snippet, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @snippet.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h4><%= pluralize(@snippet.errors.count, "error") %> prohibited this course from being saved:</h4>
        <ul>
          <% @snippet.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
    <div class="jumbotron">
      <div class="container">
        <div class="col-md-1">
          <%= link_to 'create gist', "https://gist.github.com/", target: "_blank", :class => "btn btn-default" %>
        </div></br>
        <div class="col-md-5">
          <%= f.label :image_name, 'Gist https with .js extension', :class => "col-md-10" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :image_name, placeholder: 'example:   https://gist.github.com/wb97531/0bc8d43411866be3eaf1.js',
                               :class => "form-control" %>
        </div>
      </div>
    </div>
  <div class="form-group">
    <%= f.label :objective, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :objective, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :github_file_link, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :github_file_link, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :project_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= select_tag :project_name, options_for_select(project_names), class: 'genForm_dropBox' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
