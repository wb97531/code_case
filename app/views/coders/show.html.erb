<div class="page-header">
  <%= link_to coders_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_coder_path(@coder), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show coder</h1>
</div>

<dl class="dl-horizontal">
  <dt>Coder name:</dt>
  <dd><%= @coder.coder_name %></dd>

  <dt>Password digest:</dt>
  <dd><%= @coder.password_digest %></dd>

  <dt>Email:</dt>
  <dd><%= @coder.email %></dd>

</dl>
