<div class="pull-right">
  <%= link_to edit_coder_path(@coder), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <%= link_to @coder, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-maroon-white' do %>
    <span class="glyphicon glyphicon-trash"></span>
    Delete Account
  <% end %>
</div>
<h3>
  <dl class="dl-left">
    <dt>Coder name:</dt>
    <dd style="color: white;"><%= @coder.coder_name %></dd>
  </dl>
  <dl class="dl-left">
    <dt>Email:</dt>
    <dd style="color: white;"><%= @coder.email %></dd>
  </dl>
  <dl class="dl-left">
    <dt>Dashboard Image</dt>
    <dd><%= link_to 'go to Gravtar to create', "http://en.gravatar.com/", class: 'btn btn-maroon-white', :target => "_blank" %></dd>
  </dl>
  <dl class="dl-left pull-left">
    <dt>Add or update phone number to receive a text when emailed</dt>
    <%= link_to 'Enter Number', add_phone_path, class: 'btn btn-maroon-white' %>
  </dl>
</h3>
<% if @coder.phone %>
<%= @coder.phone %>
<% end %>