<%= form_for(@course, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @course.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h4>
      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :place, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :place, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :instructor, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :instructor, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :start_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :completion_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :completion_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :certificate, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :certificate, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :completed, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :completed, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
